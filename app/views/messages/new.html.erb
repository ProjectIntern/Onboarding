<div class="messages_text">
	<%= form_for(@message) do |f| %>
    	<%= f.text_field :description, :placeholder => "Type Comment Here" %>
    	<%= f.text_field :user_id, :value => "#{@current_user.id}", class: "hidden" %>
		<%= f.submit "Comment", class: "msg-submit" %><br>
	<% end %>
  
</div>