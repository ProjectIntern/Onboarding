<!DOCTYPE html>
<html>
<head>
  <title>Profile</title>
</head>
<body>
  <div class="profile_background">
    <div class="profile_container">
      <div class="img_container">
        <%= image_tag @user.image, :class => "profile_pic"%>
        <ul>
          <% if @user.facebook != ""%>
          <li><%= link_to image_tag("facebook.png", size: "25x25"), "#{@user.facebook}"%></li>
          <% end %>
          <% if @user.linkedin != ""%>
          <li><%= link_to image_tag("linkedin.png", size: "25x25"), "#{@user.linkedin}"%></li>
          <% end %>
          <% if @user.twitter != ""%>          
          <li><%= link_to image_tag("twitter.png", size: "25x25"), "#{@user.twitter}"%></li>
          <% end %>
          <% if @user.instagram != ""%>
          <li><%= link_to image_tag("instagram.png", size: "25x25"), "#{@user.instagram}"%></li>
          <% end %>
        </ul>
      </div>

      <div class="information_container">
        <ul>
          <li> <div class="name"><%=@user.first_name%>  <%=@user.last_name%></div></li>
          <li> <%= @user.position %> </li>
          <li> <%= @user.location %> </li>
          <li> <%= @user.school %> </li>
          <li> <%= @user.email %> </li>
        </ul>
      </div>


      <div class="about_container">
        <span> <%= @user.about %> </span>
      </div>
    </div>

      <div class="message_container">
        
        <div class="contacts_container">
          <% for i in @users %>
            <%= link_to image_tag(i.image, :class => "contact_pic"), user_path(i), method: "get", action: "show" %>
          <% end %>
        </div>

        <div class="conversation_container">
          <div class="messages_content">
            <% @conversations.each do |f| %>
              <% if (f.sender == current_user.email and f.receiver_email == @user.email) or (f.sender == @user.email and f.receiver_email == current_user.email) %>
                <% if f.sender == current_user.email %>
                  <div class="push-left"><%= f.comment%><br><%= "-" + "#{current_user.first_name}" + " " + "#{current_user.last_name}"%><br><br></div>
                  <% elsif f.sender == @user.email %>
                  <div class="push-right"><%= f.comment%><br><%= f.receiver_name %><br><br></div>
                <% end %>
              <% end %>
            <% end %>

          </div>

          <div class="messages_text">
            <%= form_for(@conversation) do |f| %>
              <%= f.text_area :comment, :placeholder => "Leave a message." %>
              <%= f.text_field :receiver_email, :value => "#{@user.email}", class: "hidden" %>
              <%= f.text_field :receiver_name, :value => "#{@user.first_name}" + " " + "#{@user.last_name}", class: "hidden" %>
              <%= f.text_field :receiver_image, :value => "#{@user.image}", class: "hidden" %>
              <%= f.text_field :receiver_id, :value => "#{@user.id}", class: "hidden" %>
              <%= f.submit "Submit", class: "msg-submit" %>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>